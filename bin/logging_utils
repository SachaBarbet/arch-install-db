#!/bin/bash
# logging_utils: Logging utilities and color scheme

# Color definitions
RED="\033[0;31m"
GREEN="\033[0;32m"
YELLOW="\033[0;33m"
BLUE="\033[0;34m"
NC="\033[0m" # No Color

# Log function
log() {
    local level="$1"
    shift
    local message="$@"
    echo -e "[$(date +'%Y-%m-%d %H:%M:%S')] [$level] $message"
}

log_error() {
    log "${RED}ERROR${NC}" "$@"
}

log_warn() {
    log "${YELLOW}WARNING${NC}" "$@"
}

log_info() {
    log "${BLUE}INFO${NC}" "$@"
}

log_success() {
    log "${GREEN}SUCCESS${NC}" "$@"
}

log_process() {

}