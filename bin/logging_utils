#!/bin/bash
# logging_utils: Logging utilities and color scheme

# Import colors
source ./styles

# Log function
log() {
    local level="$1"
    shift
    local message="$@"
    echo -e "[$(date +'%Y-%m-%d %H:%M:%S')] [$level] $message"
}

# Error
log_error() {
    log "${RED}ERROR${NC}" "$@"
}

# Warn
log_warn() {
    log "${YELLOW}WARNING${NC}" "$@"
}

# Info
log_info() {
    log "${BLUE}INFO${NC}" "$@"
}

# Success
log_success() {
    log "${GREEN}SUCCESS${NC}" "$@"
}

text_bold() {
    local text="$@"
    printf "%b" "${BOLD}${text}${NC}"
}